generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id          Int          @id @default(autoincrement())
  nombre      String
  apellido    String
  correo      String       @unique
  password    String
  tipoUsuario TIPO_USUARIO @default(CLIENTE) @map("tipo_usuario")
  pedidos     Pedido?

  @@map("usuarios")
}

model Categoria {
  id          Int        @id @default(autoincrement())
  nombre      String
  descripcion String
  productos   Producto[]

  @@map("categorias")
}

model Producto {
  id          Int             @id @default(autoincrement())
  nombre      String
  precio      Float
  stock       Int
  disponible  Boolean         @default(true)
  descripcion String
  imagen      String?         @default("https://www.google.com/me.jpg")
  procedencia String
  categoriaId Int             @map("categoria_id")
  slug        String?
  pedidos     DetallePedido[]
  categoria   Categoria       @relation(fields: [categoriaId], references: [id])

  @@map("productos")
}

model Pedido {
  id             Int             @id @default(autoincrement())
  status         String
  metodoPago     String
  fecha          DateTime        @map("fecha")
  usuarioId      Int             @unique @map("usuario_id")
  subTotal       Float
  descuento      Float
  detallePedidos DetallePedido[]
  usuarios       Usuario         @relation(fields: [usuarioId], references: [id])

  @@map("pedidos")
}

model DetallePedido {
  id         Int      @id @default(autoincrement())
  cantidad   Int
  pedidoId   Int      @map("pedido_id")
  productoId Int      @map("producto_id")
  precio     Float
  total      Float
  pedido     Pedido   @relation(fields: [pedidoId], references: [id])
  producto   Producto @relation(fields: [productoId], references: [id])

  @@map("detalle_pedidos")
}

enum TIPO_USUARIO {
  ADMIN
  CLIENTE
}
